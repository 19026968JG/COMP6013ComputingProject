<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkoutTrackerApplication" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/steel_grey</item>
        <item name="colorOnPrimary">@color/charcoal</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_slate_grey</item>
        <item name="colorSecondaryVariant">@color/slate_grey</item>
        <item name="colorOnSecondary">@color/gunmetal_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <item name="colorAccent">?attr/colorSecondaryVariant</item>
        <item name="textAppearanceButton">@color/white</item>

        <!-- Hide Action Bar -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- Alert Dialog Theme -->
    <style name="AlertDialog.AppCompat.Light." parent="Theme.WorkoutTrackerApplication">
        <item name="android:buttonBarPositiveButtonStyle">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@color/white</item>

    </style>

    <style name="CustomCalendarDateStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/gunmetal_grey</item>
    </style>

    <!--TODO  CREATE ALTERNATE STYLE FOR BOTTOM NAV BAR -->



</resources>