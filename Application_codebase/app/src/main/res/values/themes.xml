<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkoutTrackerApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/dark_slate_grey</item>
        <item name="colorOnPrimary">@color/charcoal</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/steel_grey</item>
        <item name="colorSecondaryVariant">@color/gunmetal_grey</item>
        <item name="colorOnSecondary">@color/slate_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorSecondaryVariant</item>
        <item name="textAppearanceButton">@color/white</item>

    </style>

